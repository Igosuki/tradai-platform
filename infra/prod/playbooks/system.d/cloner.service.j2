[Unit]
Description=Rclone invocator
After=network-online.target

[Service]
Type=oneshot

User=root
Group=root
UMask=007

ExecStart=rclone move --min-age={{FEEDER_DATA_MOVE_MIN_AGE | default('1h') }} /root/data/ spaces:btcfeed/{{FEEDER_REMOTE_DIRECTORY | default('data') }}

WorkingDirectory=/root

# Configures the time to wait before service is stopped forcefully.
TimeoutStopSec=300

[Install]
WantedBy=multi-user.target
